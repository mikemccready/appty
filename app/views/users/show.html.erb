<div class="row" id="profileID">
	<div class="col-xs-2 col-sm-1">
		<img src="<%= @user["image_url"] %>" width="50" id="prof_pic"/>
	</div>
	<div class="col-xs-10 col-sm-11">	
		<h2><%= @user.user_name.titleize %></h2>
		<h3><%= @user.category.titleize %></h3>
	</div>	
</div>
<p><%#= @user.email %></p>
<p><%#= @user.phone_number %></p>
<div class="row">
<% if current_user.id == @user.id %>

	<h3><%= link_to 'My Appointments', users_appointments_path(@user.id) %></h3>
	<p><%= link_to "Make Appointment", appointments_path %></p>
	<% @user.appointments.each do |a| %>
		<% if a.start_time.future? %>
			<h4><%= link_to a.event_creator.titleize, appointment_path(a.id) %></h4>
	
			<p><%= a.start_time.strftime("%A, %B %-d at %l:%M %p")%> 
      		<%= a.end_time.strftime("to %l:%M %p") %></p>
      		<p><%= a.location %></p>
		<% end %>	
	<% end %>	

<% else %> 

	<h3>Available Appointments</h3>
	<% @appointments.each do |a| %>
		<% if (a.summary == "appty") && (a.start_time.future?) && (a.provider.id == @user.id) %>
			<div class="row">
				<h4><%= a.event_creator.titleize %></h4>
				<p><%= a.start_time.strftime("%A, %B %-d at %l:%M %p")%> 
				<%= a.end_time.strftime("to %l:%M %p") %></p>
				<%= link_to "Book It", edit_appointment_path(a.id) %>
				<hr>
			</div>	
		<% end %>
	<% end %>

<% end %>






<% if current_user.id == @user.id %>
	<h3>Providers</h3>
		<ul>
		<% for providership in @user.providerships %>
	   		<li>
	     		<%=h providership.provider.user_name.titleize %>
	     		(<%= link_to "remove", providership, :method => :delete %>)
	   		</li>
	 <% end %>
	</ul>  
	<p><%= link_to "Find Providers", users_path %></p>
	
	<% if current_user.is_provider == true %>
		<h3>Clients</h3>
		<ul>
			<% for user in @user.inverse_providers %>
	   			<li><%=h user.user_name.titleize %></li> 
			<% end %>
		</ul> 
	<% end %>	
<% end %> 

<%= link_to 'Back to users', users_path %><br>
</div>	

